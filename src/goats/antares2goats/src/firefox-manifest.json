{
  "manifest_version": 3,
  "name": "antares2goats",
  "version": "0.0.0",
  "permissions": ["activeTab", "tabs", "contextMenus", "storage"],
  "host_permissions": ["http://localhost:8000/receive_query/"],
  "browser_specific_settings": {
    "gecko" : {
      "id": "goats@noirlab.edu"
    }
  },
  "action": {
    "default_icon": {
      "16": "img/favicon-16.png",
      "32": "img/favicon-32.png",
      "48": "img/favicon-48.png",
      "128": "img/favicon-128.png"
    },
    "default_title": "Parse and send object or query to GOATS."
  },
  "description": "Enhance your GOATS experience by seamlessly integrating query capabilities and target selection from ANTARES directly into GOATS with just a single click.",
  "background": {
    "type": "module",
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "img/favicon-16.png",
    "32": "img/favicon-32.png",
    "48": "img/favicon-48.png",
    "128": "img/favicon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false
  }
}
